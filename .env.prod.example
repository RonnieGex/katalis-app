# Production Environment Variables for KatalisApp
# Copy this file to .env.prod and fill in the actual values

# Domain Configuration
API_URL=https://api.katalisapp.com
CORS_ORIGINS=https://katalisapp.com,https://www.katalisapp.com

# SSL/ACME Configuration
ACME_EMAIL=admin@katalisapp.com

# Backend Configuration
SECRET_KEY=your-super-secure-secret-key-for-production
OPENAI_API_KEY=sk-your-production-openai-api-key

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional: PostgreSQL (if not using Supabase)
# DATABASE_URL=postgresql://user:password@postgres:5432/katalis_prod
# DB_USER=katalis_prod
# DB_PASSWORD=your-secure-db-password
# DB_NAME=katalis_prod

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Monitoring (optional)
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@katalisapp.com
SMTP_PASSWORD=your-email-password

# Analytics & Tracking (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# Backup Configuration
BACKUP_S3_BUCKET=katalisapp-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_BACKUPS=true